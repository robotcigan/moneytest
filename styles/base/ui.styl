.btn
  background-color $primary
  border-radius 32px
  color #fff
  cursor pointer
  display inline-block
  font-size 2.2rem
  line-height 1
  max-width 35rem
  padding 2rem 0
  text-align center
  width 100%
  &:hover
    color #fff
  &--gradient
    background linear-gradient(to right, #168a86, #0c666d)
    transition all .2s
    &:hover
      background linear-gradient(to right, #168a86 - 10%, #0c666d - 10%)
      color #fff
  &.not-active
    background-color #ddd
    color #fff

.radio
  cursor pointer
  display block
  margin-bottom 2rem
  user-select none
  input
    display none
    &:checked + span
      // border-color transparent
      &:after
        opacity 1
        height 6px
        width 6px
  span
    background-color #eee
    border-radius 50%
    border 1px solid $light-gray
    circle(2rem)
    cursor pointer
    display inline-block
    margin-right .8rem
    position relative
    vertical-align middle
    transition border .2s
    &:after
      background #3b3d40
      border-radius 50%
      content ''
      opacity 0
      left 0
      right 0
      top 0
      bottom 0
      margin auto
      position absolute
      width 2px
      height 2px
  x
    color $gray
    font-size 1.8rem
    font-weight 400
    vertical-align middle
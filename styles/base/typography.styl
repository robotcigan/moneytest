.h1,
.h2,
.h3,
.p,
p
  margin 0
  margin-bottom 1rem

.h1
  font-family $font-header
  font-size 7.2rem
  font-weight 400
  margin-bottom 2rem
.h2
  color $primary
  font-family $font-header
  font-size 5.6rem
  font-weight 400
  line-height 1
  margin-bottom 6rem
  text-align center
  text-transform uppercase

h4
  color $main
  display inline-block
  font-size 3rem
  font-weight 800
  line-height 1
  // margin-bottom 2.5rem
  vertical-align middle

p
  color $main
  font-size 2.2rem
  line-height 1.6
  margin-bottom 4rem